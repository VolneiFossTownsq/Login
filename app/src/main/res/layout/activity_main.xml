<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_009688"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/loginNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Your nickname"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/loginNickName"
        app:layout_constraintStart_toStartOf="@+id/loginNickName"
        app:layout_constraintTop_toBottomOf="@+id/loginNickName"
        android:layout_marginTop="8dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/loginNickName"
        app:layout_constraintStart_toStartOf="@+id/loginNickName"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>